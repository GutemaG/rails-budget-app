<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'devise/shared/header', f: f %>
  <%= render 'shared/note_alert'%>
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' , placeholder: "Name"%>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' , placeholder: "Email"%>
  </div>
  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Password"%>
    <% if @minimum_password_length %>
      <div class="form-text mx-2 my-0 fst-italic">
        Your password must <%= @minimum_password_length %> characters minimum
      </div>
    <% end %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Confirm Password"%>
  </div>
  <div class="mx-2 mt-3">
    <%- if controller_name != 'sessions' %>
      <%= 'Do you have account?' %>
      <%= link_to "Log in", new_session_path(resource_name) , class: "text-main" %><br />
    <% end %>
  </div>
<% end %>
